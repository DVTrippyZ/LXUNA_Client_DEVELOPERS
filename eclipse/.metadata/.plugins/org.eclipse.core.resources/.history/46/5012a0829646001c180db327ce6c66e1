package intent.ui;

public class Rainbow {

	public static int random;
	
	public static int render(long delay, String fade) {
		
		int min = 100000;  
		int max = 900000;  
		String y = "0x" + fade;
	
		
		
		
		new java.util.Timer().schedule( 
		        new java.util.TimerTask() {
		            @Override
		            public void run() {
		            	random = (int)Math.random()*(max-min+1)+min;
		            	
		            	
		            }
		        }, 
		        delay 
		);
		
		
		
		return reTypeInt(y + reTypeString(random));
		
		
	}
	
	
	
	
	private static String reTypeString(int i) {
		return Integer.toString(i);
		}
	
	private static int reTypeInt(String s) {
		return Integer.parseInt(s);
		}
	
	
}
